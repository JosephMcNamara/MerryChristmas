<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.merrychristmas.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/trees"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:textSize="60sp"
        android:text="Merry Christmas"
        android:paddingTop="15dp"/>

    <TextView
        android:id="@+id/fof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp"
        android:fontFamily="cursive"
        android:paddingLeft="90dp"
        android:text="From Our Family"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/fof"
        android:layout_toRightOf="@+id/fof"
        android:fontFamily="cursive"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:text="To Yours"
        android:textSize="25sp"
        android:textStyle="bold" />
        //>
</RelativeLayout>
